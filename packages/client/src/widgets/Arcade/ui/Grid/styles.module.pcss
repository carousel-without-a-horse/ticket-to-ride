.layout {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);

  width: calc($arcadeNumberOfGridColumns * $arcadeGridSquareSize * 1px);
  height: calc($arcadeNumberOfGridRows * $arcadeGridSquareSize * 1px);
}

.gridSquare {
  position: absolute;
  width: calc($arcadeGridSquareSize * 1px);
  height: calc($arcadeGridSquareSize * 1px);
}


