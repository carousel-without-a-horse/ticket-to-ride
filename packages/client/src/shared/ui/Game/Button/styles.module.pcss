.button {
  width: 130px;
  border-radius: 6px;
  cursor: pointer;
  font-weight: 600;
  color: $text;
  border: 1px solid $white;
  background-color: $greenCold;

  @mixin shadow;
  
  transition: 
    box-shadow 0.2s,
    transform 0.15s;

  &:active {
    outline: 0;
    @mixin shadow 0;
    
    transform: translate(0, 5px);
  }
}

.normal {
  height: 70px;
}

.small {
  height: 30px;
  font-size: 12px;
  margin-bottom: 10px;
}
