.wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;

  width: 180px;
  height: 100%;
  margin-right: 10px;
  padding: 10px;

  border-radius: 8px;
}

.icon {
  display: flex;
  align-items: center;
  justify-content: center;

  width: 60px;
  height: 60px;

  border-radius: 8px;
}

.points {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  width: 40px;
  height: 60px;

  border-radius: 8px;
}
