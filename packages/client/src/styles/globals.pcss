#root {
  height: inherit;
  min-height: inherit;
}

.hide_scrollbar {
  /* Hide scrollbar for */
  -ms-overflow-style: none; /* IE and Edge */
  scrollbar-width: none; /* Firefox */

  &::-webkit-scrollbar { /* Chrome, Safari and Opera */
    display: none;
  }
}

.box_shadow {
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
}

.text_shadow {
  text-shadow: 0px 0px 2px rgba(0, 0, 0, 0.96);
}
